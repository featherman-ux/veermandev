---
// src/pages/en/portfolio.astro

// Capture the language from the route
const { lang } = Astro.params as { lang: 'en' };

// Import layout and translations
import BaseLayout from '../../layouts/BaseLayout.astro';
import { ui } from '../../i18n/config';

// Translation helper
const t = ui.en;

// Define page metadata
const pageTitle = `Portfolio | VeermanDevelopment`;
const pageDescription = `Explore our projects and cases showcasing our expertise in modern web solutions.`;
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="fade-in text-center py-24 bg-card-light dark:bg-card-dark rounded-xl shadow-lg">
    <h1 class="text-4xl md:text-6xl font-heading font-bold mb-6">
      Portfolio
    </h1>
    <p class="text-lg md:text-xl max-w-3xl mx-auto text-opacity-80">
      Here we showcase our recent projects.
    </p>
  </section>

  <!-- Featured Projects -->
  <section class="fade-in grid gap-16 py-16 lg:grid-cols-2 xl:grid-cols-3">
    <!-- Project 1: waarisniels.nl -->
    <div class="project-card featured">
      <img src="/images/waarisniels-mockup.jpg" alt="waarisniels.nl interface" class="rounded-lg" />
      <div class="mt-4">
        <h2 class="text-2xl font-semibold">
          <a href="https://waarisniels.nl" target="_blank" rel="noopener">waarisniels.nl</a>
        </h2>
        <p class="text-sm text-primary uppercase font-medium">
          Content Marketing Platform
        </p>
        <p class="mt-2 text-opacity-80">
          A comprehensive platform for Dutch entrepreneurs featuring content management, SEO tools, analytics, and automated social scheduling.
        </p>
      </div>
    </div>

    <!-- Project 2: Modern E-commerce -->
    <div class="project-card">
      <img src="/images/ecommerce-mockup.jpg" alt="E-commerce dashboard" class="rounded-lg" />
      <div class="mt-4">
        <h2 class="text-2xl font-semibold">Modern E-commerce</h2>
        <p class="text-sm text-primary uppercase font-medium">Full-Stack Development</p>
        <p class="mt-2 text-opacity-80">
          Scalable store with inventory management, real-time analytics, and payment integrations.
        </p>
      </div>
    </div>

    <!-- Project 3: Corporate Redesign -->
    <div class="project-card">
      <img src="/images/corporate-mockup.jpg" alt="Corporate website" class="rounded-lg" />
      <div class="mt-4">
        <h2 class="text-2xl font-semibold">Corporate Redesign</h2>
        <p class="text-sm text-primary uppercase font-medium">UI/UX Design & Development</p>
        <p class="mt-2 text-opacity-80">
          Redesign for a financial services firm focusing on accessibility, performance, and lead generation.
        </p>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section class="fade-in text-center py-16">
    <p class="mb-6 text-lg md:text-xl text-opacity-80">
      Ready for your next project? Get in touch!
    </p>
    <a
      href="/en/contact"
      class="inline-block bg-primary text-black font-heading font-semibold py-3 px-8 rounded-lg shadow hover:bg-primary/90 transition"
    >
      Get in Touch
    </a>
  </section>
</BaseLayout>
