---
import BaseLayout from '../../layouts/BaseLayout.astro';

const pageTitle = "Contact | VeermanDevelopment";
const pageDescription = "Get in touch with us for inquiries, quotes, or to book a discovery call.";
---
<BaseLayout title={pageTitle} description={pageDescription}>
  <!-- Hero -->
  <section class="fade-in text-center py-12 md:py-16 bg-card-light dark:bg-card-dark rounded-xl shadow">
    <h1 class="font-heading font-bold text-5xl md:text-6xl mb-4">
      <span>Let's </span><span class="text-primary">Build</span>
    </h1>
    <p class="text-xl md:text-2xl max-w-3xl mx-auto opacity-80">
      Have a project in mind? Book a free discovery call.
    </p>
  </section>

  <!-- Booking & Message Cards with 'or' between -->
  <section class="fade-in grid lg:grid-cols-2 gap-12 py-16 items-stretch relative">
    <!-- Discovery Call Card -->
    <div class="h-full">
      <div class="bg-card-light dark:bg-card-dark rounded-xl shadow p-6 h-full flex flex-col">
        <h2 class="font-heading text-3xl md:text-4xl font-semibold mb-4 text-center">
          Book a Discovery Call
        </h2>
        <p class="text-center mb-6 opacity-80">
          Choose a time that works for you. We'll spend 30 minutes discussing your project goals, no strings attached.
        </p>
        <div class="calendly-inline-widget-container flex-grow">
          <div 
            class="calendly-inline-widget" 
            data-url="https://calendly.com/contact-veermandev/30min?hide_event_type_details=1&primary_color=0a84ff&hide_gdpr_banner=1"
            style="min-width:320px;height:600px;"
            data-resize="true">
          </div>
        </div>
        <script type="text/javascript" src="https://assets.calendly.com/assets/external/widget.js" async></script>
      </div>
    </div>

    <!-- Small 'or' -->
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 bg-card-light dark:bg-card-dark px-4 py-1 rounded-full shadow">
      <span class="text-primary font-semibold">or</span>
    </div>

    <!-- Send Message Card -->
    <div class="h-full">
      <div class="bg-card-light dark:bg-card-dark rounded-xl shadow p-6 h-full flex flex-col">
        <h2 class="font-heading text-3xl md:text-4xl font-semibold mb-4 text-center">
          Send a Message
        </h2>
        <p class="text-center mb-6 opacity-80">
          We will respond as soon as possible.
        </p>
        <form 
          id="contact-form"
          action="https://formspree.io/f/xdklqakn" 
          method="POST" 
          class="space-y-6 flex-grow flex flex-col"
          data-sending-text="Sending..."
          data-success-title="Thank you!"
          data-success-body="Your message has been sent successfully. I will get back to you as soon as possible."
          data-error-text="Something went wrong while sending the form. Please try again."
        >
          <div>
            <label for="name" class="block mb-2 text-sm font-medium">
              Name
            </label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              placeholder="Your full name" 
              class="w-full p-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-800 focus:ring-2 focus:ring-primary focus:border-transparent transition" 
              required 
            />
          </div>
          <div>
            <label for="email" class="block mb-2 text-sm font-medium">
              Email
            </label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              placeholder="you@example.com" 
              class="w-full p-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-800 focus:ring-2 focus:ring-primary focus:border-transparent transition" 
              required 
            />
          </div>
          <div>
            <label for="message" class="block mb-2 text-sm font-medium">
              Message
            </label>
            <textarea 
              id="message" 
              name="message" 
              placeholder="Write your message here..." 
              class="w-full p-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-800 focus:ring-2 focus:ring-primary focus:border-transparent transition" 
              rows="5" 
              required>
            </textarea>
          </div>
          <button 
            type="submit" 
            class="w-full bg-card-light dark:bg-card-dark text-black font-semibold px-6 py-3 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-colors mt-auto"
          >
            Send Message
          </button>
        </form>
        <div id="success-message" class="hidden text-center p-6 border border-green-500 bg-green-50 dark:bg-green-900/20 rounded-lg mt-6">
          <h3 class="font-heading text-xl mb-2 text-green-800 dark:text-green-300">
            Thank you!
          </h3>
          <p class="text-green-700 dark:text-green-300">
            Your message has been sent successfully. We will get back to you as soon as possible.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Info Cards -->
  <section class="fade-in py-16">
    <div class="grid md:grid-cols-3 gap-6 items-stretch">
      <div class="p-4 bg-card-light dark:bg-card-dark rounded-xl shadow text-center hover:shadow-lg transition flex flex-col">
        <div class="text-3xl mb-3">ðŸ“§</div>
        <h3 class="text-xl font-semibold mb-2">Email</h3>
        <p class="opacity-80 mt-auto">contact@veermandev.nl</p>
      </div>
      <div class="p-4 bg-card-light dark:bg-card-dark rounded-xl shadow text-center hover:shadow-lg transition flex flex-col">
        <div class="text-3xl mb-3">âš¡</div>
        <h3 class="text-xl font-semibold mb-2">Quick Response</h3>
        <p class="opacity-80 mt-auto">Response within 24 hours</p>
      </div>
      <div class="p-4 bg-card-light dark:bg-card-dark rounded-xl shadow text-center hover:shadow-lg transition flex flex-col">
        <div class="text-3xl mb-3">ðŸš€</div>
        <h3 class="text-xl font-semibold mb-2">No Commitment</h3>
        <p class="opacity-80 mt-auto">Free consultation</p>
      </div>
    </div>
  </section>

  <style>
    /* Match spacing/font sizes with process page */
    h1, h2 { line-height: 1.2; }
    section.py-12 { padding-top: 3rem; padding-bottom: 3rem; }
    section.py-16 { padding-top: 4rem; padding-bottom: 4rem; }
    .calendly-inline-widget { border-radius: 8px; }
    /* Ensure 'or' overlay sits above grid */
    section.relative { position: relative; }
  </style>
</BaseLayout>
