---
// src/pages/en/timeline.astro

import BaseLayout from '../../layouts/BaseLayout.astro';
import { ui } from '../../i18n/config';
import { Image } from 'astro:assets';
import day1Image from '../../assets/Pictures_Timeline/day-1.png';
import day2Image from '../../assets/Pictures_Timeline/day-2.png';
import day3Image from '../../assets/Pictures_Timeline/day-3.png';

const pageTitle = "Timeline | VeermanDevelopment";
const pageDescription = "Your website live in three days: from kickoff to launch, plus ongoing care.";
const t = ui.en;
---

<BaseLayout title={pageTitle} description={pageDescription}>
  <section class="fade-in text-center py-12 md:py-16 bg-card-light dark:bg-card-dark rounded-xl shadow">
    <h1 class="text-5xl md:text-6xl font-heading font-bold mb-4">
      {t['nav.timelineStart']}<span class="text-primary">{t['nav.timelineEnd']}</span>
    </h1>
    <p class="text-xl md:text-2xl opacity-90 mb-6 max-w-2xl mx-auto">
      From kickoff to launch, your site goes live in just three days.
    </p>
    <div class="inline-block bg-white bg-opacity-20 backdrop-blur-sm rounded-full px-6 py-3 font-semibold text-lg">
      <span class="underline">3 Days Delivery</span>
    </div>
  </section>

  <section class="py-16 px-6 md:px-0">
    <div class="max-w-4xl mx-auto space-y-16">

      <div class="flex flex-col md:flex-row items-center md:space-x-12">
        <div class="md:w-1/2 text-center md:text-left">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-primary text-white rounded-full mb-4 text-2xl font-bold animate-pulse">1</div>
          <h2 class="text-3xl font-semibold mb-2">Day One</h2>
          <p class="text-opacity-80">
            Kickoff meeting to discuss objectives, audience, and key features. We refine requirements and agree on scope.
          </p>
        </div>
        <div class="md:w-1/2 mt-6 md:mt-0">
          <Image src={day1Image} widths={[332, 664]} sizes="(max-width: 768px) 100vw, 332px" format="webp" alt="Kickoff meeting illustration" class="w-full rounded-lg shadow-lg transform hover:scale-105 transition" fetchpriority="high" />
        </div>
      </div>

      <div class="flex flex-col md:flex-row-reverse items-center md:space-x-12 md:space-x-reverse">
        <div class="md:w-1/2 text-center md:text-left">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-primary text-white rounded-full mb-4 text-2xl font-bold animate-pulse">2</div>
          <h2 class="text-3xl font-semibold mb-2">Day Two</h2>
          <p class="text-opacity-80">
            First design & interactive prototype delivered. You get a clear visual and can provide feedback in real time.
          </p>
        </div>
        <div class="md:w-1/2 mt-6 md:mt-0">
          <Image src={day2Image} widths={[332, 664]} sizes="(max-width: 768px) 100vw, 332px" format="webp" alt="Design prototype illustration" class="w-full rounded-lg shadow-lg transform hover:scale-105 transition" />
        </div>
      </div>

      <div class="flex flex-col md:flex-row items-center md:space-x-12">
        <div class="md:w-1/2 text-center md:text-left">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-primary text-white rounded-full mb-4 text-2xl font-bold animate-pulse">3</div>
          <h2 class="text-3xl font-semibold mb-2">Day Three</h2>
          <p class="text-opacity-80">
            Fully functional website built, tested, and launched. Your site goes live, optimized for speed and SEO.
          </p>
        </div>
        <div class="md:w-1/2 mt-6 md:mt-0">
          <Image src={day3Image} widths={[332, 664]} sizes="(max-width: 768px) 100vw, 332px" format="webp" alt="Deployment illustration" class="w-full rounded-lg shadow-lg transform hover:scale-105 transition" />
        </div>
      </div>

    </div>
  </section>

  <section class="py-16 bg-gray-50 dark:bg-gray-800">
    <div class="max-w-3xl mx-auto text-center space-y-6 px-6">
      <h2 class="text-4xl font-semibold text-primary">Maintenance & Optimization</h2>
      <p class="text-opacity-80">
        After launch, we provide ongoing support, performance tuning, and feature updates. Your website stays secure, fast, and up to date.
      </p>
      <a href="/en/contact" class="inline-block bg-primary text-black font-heading font-semibold py-3 px-8 rounded-lg shadow hover:bg-primary/90 transition-transform transform hover:scale-105 duration-300">
        Learn More
      </a>
    </div>
  </section>
</BaseLayout>