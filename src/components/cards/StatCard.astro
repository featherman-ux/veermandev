---
interface Props {
  value: string;
  description: string;
  icon?: string;
}

const { value, description, icon } = Astro.props;
---

<div class="stat-card text-center">
  {icon && <div class="stat-icon text-3xl mb-2">{icon}</div>}
  <div class="text-4xl font-bold text-primary mb-2">{value}</div>
  <div class="text-sm opacity-80">{description}</div>
</div>
