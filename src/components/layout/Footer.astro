---
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

// Get current language from URL
const lang = getLangFromUrl(Astro.url);

// Current year
const currentYear = new Date().getFullYear();
---

<footer class="bg-card-light dark:bg-card-dark border-t border-gray-200 dark:border-gray-700 mt-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    
    <!-- MAIN FOOTER CONTENT -->
    <div class="grid md:grid-cols-4 gap-8 mb-8">
      
      <!-- COMPANY INFO -->
      <div class="md:col-span-2">
        <div class="mb-4">
          <h3 class="font-heading text-2xl font-bold text-text-light dark:text-text-dark tracking-wide">
            Veerman<span class="text-primary">Development</span>
          </h3>
          <p class="text-sm opacity-60 mt-1">Websites Engineered for Growth</p>
        </div>
        <p class="text-sm opacity-80 mb-4 max-w-md">
          We build high-performance websites that convert visitors into customers using modern Jamstack technology. 
          Your strategic growth partners for measurable business results.
        </p>
        
      </div>

      <!-- QUICK LINKS -->
      <div>
        <h4 class="font-semibold text-text-light dark:text-text-dark mb-4">Services</h4>
        <ul class="space-y-2">
          <li>
            <a href={`/${lang}/services`} class="text-sm opacity-80 hover:text-primary hover:opacity-100 transition-all">
              Growth-Driven Design
            </a>
          </li>
          <li>
            <a href={`/${lang}/services`} class="text-sm opacity-80 hover:text-primary hover:opacity-100 transition-all">
              Jamstack Development
            </a>
          </li>
          <li>
            <a href={`/${lang}/services`} class="text-sm opacity-80 hover:text-primary hover:opacity-100 transition-all">
              Performance Optimization
            </a>
          </li>
          <li>
            <a href={`/${lang}/portfolio`} class="text-sm opacity-80 hover:text-primary hover:opacity-100 transition-all">
              Portfolio
            </a>
          </li>
        </ul>
      </div>

      <!-- CONTACT INFO -->
      <div>
        <h4 class="font-semibold text-text-light dark:text-text-dark mb-4">Get Started</h4>
        <ul class="space-y-2">
          <li>
            <a href={`/${lang}/contact`} class="text-sm opacity-80 hover:text-primary hover:opacity-100 transition-all">
              Free Discovery Call
            </a>
          </li>
          <li>
            <a href={`/${lang}/about`} class="text-sm opacity-80 hover:text-primary hover:opacity-100 transition-all">
              Our Process
            </a>
          </li>
          <li>
            <a href="mailto:contact@veermandev.nl" class="text-sm opacity-80 hover:text-primary hover:opacity-100 transition-all">
              contact@veermandev.nl
            </a>
          </li>
          <li class="text-sm opacity-60">
            Based in Netherlands
          </li>
        </ul>
      </div>
    </div>

    <!-- TRUST SIGNALS -->
    <div class="border-t border-gray-200 dark:border-gray-700 pt-8 mb-8">
      <div class="grid md:grid-cols-3 gap-6 text-center">
        <div>
          <div class="text-2xl font-bold text-primary mb-1">340%</div>
          <div class="text-xs opacity-60">Average lead increase</div>
        </div>
        <div>
          <div class="text-2xl font-bold text-primary mb-1">&lt;1s</div>
          <div class="text-xs opacity-60">Load time guarantee</div>
        </div>
        <div>
          <div class="text-2xl font-bold text-primary mb-1">24h</div>
          <div class="text-xs opacity-60">Response time</div>
        </div>
      </div>
    </div>

    <!-- BOTTOM BAR -->
    <div class="border-t border-gray-200 dark:border-gray-700 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        
        <!-- COPYRIGHT -->
        <p class="text-sm opacity-60">
          &copy; {currentYear} Veerman Development. All rights reserved.
        </p>

        <!-- LEGAL LINKS -->
        <div class="flex gap-6">
          <a href={`/${lang}/privacy`} class="text-sm opacity-60 hover:text-primary hover:opacity-100 transition-all">
            Privacy Policy
          </a>
          <a href={`/${lang}/terms`} class="text-sm opacity-60 hover:text-primary hover:opacity-100 transition-all">
            Terms of Service
          </a>
        </div>

        <!-- BUILT WITH -->
        <div class="text-sm opacity-60">
          Built with <span class="text-primary">Astro</span> ⚡
        </div>
      </div>
    </div>
  </div>

  <!-- PERFORMANCE BADGE (Optional - shows tech credibility) -->
  <div class="bg-primary/5 border-t border-primary/20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3">
      <div class="flex items-center justify-center gap-4 text-sm">
        <span class="opacity-60">⚡ This site loads in</span>
        <span class="text-primary font-semibold">0.8 seconds</span>
        <span class="opacity-60">• 100% Jamstack • Zero maintenance required</span>
      </div>
    </div>
  </div>
</footer>
