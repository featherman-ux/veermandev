---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  body: string;
  href: string;
  imageSrc?: any;
  imageAlt?: string;
}

const { title, body, href, imageSrc, imageAlt = '' } = Astro.props;
---

<a 
  href={href} 
  class="group block bg-card-light dark:bg-card-dark rounded-2xl shadow-lg overflow-hidden transition-all duration-500 hover:shadow-2xl hover:-translate-y-2 focus:outline-none focus:ring-2 focus:ring-primary focus:ring-offset-2 focus:ring-offset-background-light dark:focus:ring-offset-background-dark"
>
  {imageSrc && (
    <div class="overflow-hidden">
      <Image 
        src={imageSrc} 
        alt={imageAlt} 
        width={400} 
        height={225} 
        class="w-full h-56 object-cover transition-transform duration-700 group-hover:scale-110" 
      />
    </div>
  )}
  <div class="p-6">
    <h3 class="font-heading text-2xl font-bold text-text-light dark:text-text-dark mb-4">
      {title}
    </h3>
    <p class="font-sans text-text-light/80 dark:text-text-dark/80 mb-6">
      {body}
    </p>
    <span class="inline-block font-heading font-semibold text-primary transition-colors duration-300 group-hover:text-accent">
      Read More â†’
    </span>
  </div>
</a>