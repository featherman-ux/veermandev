---
// Hero.astro
interface Props {
  t: typeof import('../i18n/config').ui['nl'];
}

const { t } = Astro.props;
---

<section class="bg-card-light dark:bg-card-dark text-center fade-in pt-24 pb-28 sm:pt-32 sm:pb-40">
  <div class="container mx-auto px-6">
    <h1 class="font-heading text-5xl sm:text-7xl font-bold text-text-light dark:text-text-dark mb-8 leading-tight">
      {t['hero.title']}
    </h1>
    <p class="font-sans text-xl sm:text-2xl max-w-3xl mx-auto mb-12 text-text-light/80 dark:text-text-dark/80">
      {t['hero.subtitle']}
    </p>
    <a 
      href="#contact" 
      class="bg-primary hover:bg-accent text-white font-heading font-semibold py-4 px-10 rounded-full text-xl shadow-lg transition-transform transform hover:scale-105 duration-300 inline-block"
    >
      {t['hero.cta']}
    </a>
  </div>
</section>