---
import { getLangFromUrl, useTranslations, useTranslatedPath } from '../../i18n/utils';

// Get current language from URL
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const tp = useTranslatedPath(lang);

// Current year
const currentYear = new Date().getFullYear();
---

<footer class="bg-card-light dark:bg-card-dark border-t border-gray-200 dark:border-gray-700 mt-20">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    
    <!-- MAIN FOOTER CONTENT -->
    <div class="grid md:grid-cols-3 gap-8 mb-8">
      
      <!-- COMPANY INFO -->
      <div>
        <div class="mb-4">
          <h3 class="font-heading text-2xl font-bold text-text-light dark:text-text-dark tracking-wide">
            Veerman<span class="text-primary">Development</span>
          </h3>
          <p class="text-sm opacity-60 mt-1">{t('footer.tagline')}</p>
        </div>
        <p class="text-sm opacity-80 mb-4 max-w-md">{t('footer.description')}</p>
        
      </div>

      <!-- QUICK LINKS -->
      <div>
        <h4 class="font-semibold text-text-light dark:text-text-dark mb-4">{t('footer.services')}</h4>
        <ul class="space-y-2">
          <li>
            <a href={tp('home')} class="text-sm opacity-80 hover:text-primary hover:opacity-100 transition-all">{t('nav.home')}</a>
          </li>
          <li>
            <a href={tp('services')} class="text-sm opacity-80 hover:text-primary hover:opacity-100 transition-all">{t('nav.services')}</a>
          </li>
          <li>
            <a href={tp('portfolio')} class="text-sm opacity-80 hover:text-primary hover:opacity-100 transition-all">{t('nav.portfolio')}</a>
          </li>
          <li>
            <a href={tp('process')} class="text-sm opacity-80 hover:text-primary hover:opacity-100 transition-all">{t('nav.process')}</a>
          </li>
          <li>
            <a href={tp('contact')} class="text-sm opacity-80 hover:text-primary hover:opacity-100 transition-all">{t('nav.contact')}</a>
          </li>
        </ul>
      </div>

      <!-- CONTACT INFO -->
      <div>
        <h4 class="font-semibold text-text-light dark:text-text-dark mb-4">{t('footer.get.started')}</h4>
        <ul class="space-y-2">
          <li>
            <a href={tp('contact')} class="text-sm opacity-80 hover:text-primary hover:opacity-100 transition-all">
              {t('footer.discovery.call')}
            </a>
          </li>
          <li>
            <a href={tp('process')} class="text-sm opacity-80 hover:text-primary hover:opacity-100 transition-all">{t('footer.our.process')}</a>
          </li>
          <li>
            <a href="mailto:contact@veermandev.nl" class="text-sm opacity-80 hover:text-primary hover:opacity-100 transition-all">
              contact@veermandev.nl
            </a>
          </li>
          <li class="text-sm opacity-60">{t('footer.based.in')}</li>
        </ul>
      </div>
    </div>

    <!-- TRUST SIGNALS -->
    <div class="border-t border-gray-200 dark:border-gray-700 pt-8 mb-8">
      <div class="grid md:grid-cols-3 gap-6 text-center">
        <div>
          <div class="text-2xl font-bold text-primary mb-1">{t('footer.metric1.value')}</div>
          <div class="text-xs opacity-60">{t('footer.metric1.label')}</div>
        </div>
        <div>
          <div class="text-2xl font-bold text-primary mb-1">{t('footer.metric2.value')}</div>
          <div class="text-xs opacity-60">{t('footer.metric2.label')}</div>
        </div>
        <div>
          <div class="text-2xl font-bold text-primary mb-1">{t('footer.metric3.value')}</div>
          <div class="text-xs opacity-60">{t('footer.metric3.label')}</div>
        </div>
      </div>
    </div>

    <!-- BOTTOM BAR -->
    <div class="border-t border-gray-200 dark:border-gray-700 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        
        <!-- COPYRIGHT -->
        <p class="text-sm opacity-60">
          &copy; {currentYear} Veerman Development. All rights reserved.
        </p>

        <!-- LEGAL LINKS -->
        <div class="flex gap-6">
          <a href={tp('privacy')} class="text-sm opacity-60 hover:text-primary hover:opacity-100 transition-all">{t('footer.privacy')}</a>
          <a href={tp('terms')} class="text-sm opacity-60 hover:text-primary hover:opacity-100 transition-all">{t('footer.terms')}</a>
        </div>

        <!-- BUILT WITH -->
        <div class="text-sm opacity-60">{t('footer.built.with')}</div>
      </div>
    </div>
  </div>

  <!-- PERFORMANCE BADGE (Optional - shows tech credibility) -->
  <div class="bg-primary/5 border-t border-primary/20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3">
      <div class="flex items-center justify-center gap-4 text-sm">
        <span class="opacity-60">âš¡ {t('footer.performance.load')}</span>
        <span class="text-primary font-semibold">{t('footer.performance.time')}</span>
        <span class="opacity-60">{t('footer.performance.tech')}</span>
      </div>
    </div>
  </div>
</footer>
